
@{
    ViewBag.Title = "Bus Hop > Passengers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    @* Bustracker Api JavaScripts *@
    <script type="text/javascript" src="~/Scripts/busTrackerApi.js"></script>

    @* Passenger View JavaScripts *@
    <script type="text/javascript" src="~/Scripts/passenger2.js"></script>

    <script type="text/javascript" asp mv>
        // Document Ready
        $(document).ready(function () {
            getDepartureRouteList();
        });
    </script>
}

<div class="page-header">
    <h1><img style="max-width:50px; margin-top: -4px; margin-right: 10px; float:left;" src="/logo.png"> Bus HoP >> Passengers</h1>
</div>

@* Route Search Form *@
<form>
    <div class="form-group" style="vertical-align:bottom">
        <label>Route:</label>
        <select id="routeSelect" class="form-control">
            <option value="" selected disabled>Select Route...</option>
        </select>
    </div>
    <div class="form-group" style="vertical-align:bottom">
        <label>Direction:</label>
        <select id="directionSelect" class="form-control">
            <option value="" selected disabled>Select Direction...</option>
        </select>
    </div>
    <div class="form-group" style="vertical-align:bottom">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
