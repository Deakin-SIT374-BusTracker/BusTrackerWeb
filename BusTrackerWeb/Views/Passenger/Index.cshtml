@section Scripts
{
    <!-- JQuery v1.12.4 -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Bootstrap v3 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Google Map API v3 -->
    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqZFelSFhnk3JDbFVx7qovf8IIG1ZViVs"></script>

    <!-- Google Map Polygon Extension v3 -->
    <script type="text/javascript" src="~/Scripts/map-epoly.js"></script>

    <!-- Map Icons -->
    <link rel="stylesheet" type="text/css" href="~/Content/map-icons.css">
    <script type="text/javascript" src="~/Scripts/map-icons.js"></script>

    <!-- Map Simulation JavaScript-->
    <script type="text/javascript" src="~/Scripts/passenger-map-simulator.js"></script>

    <!-- Web Design Stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/Content/passenger.css">

    <!-- Search Type Ahead JavaScript-->
    <script type="text/javascript" src="~/Scripts/typeahead.js"></script>

    <!-- Web Design Javascript -->
    <script type="text/javascript" src="~/Scripts/passenger.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            initializeMap();
            initializeRoutes();
        });
    </script>

}

<div class="page-header">
	<h1>Bus Tracker >> Passengers</h1>
</div>

<div class="container-fluid content">
	<div class="row content">

		<div class="col-sm-4 sidenav">
			<div class="sidenav-content">
				<div class="panel panel-default">
					<div class="panel-heading">
						<span class="routes-search">
							<div class="input-group" id="adv-search">
								<div class="has-feedback">
									<input id="searchroutes" type="text" class="form-control dropdown-toggle" placeholder="Search (stations / stops)" data-toggle="dropdown" />
									<span class="routes-badge form-control-feedback">0</span>
								</div>
								<div class="input-group-btn">
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
									</div>
								</div>
							</div>
						</span>
					</div>
					<div id="routes" class="panel scrollable-panel">
						<div class="panel-body">
							<div class="list-group routes-group-list"></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-sm-8 map">
			<div id="map_canvas"></div>
		</div>
	</div>
</div>
<hr />
<div class="modal fade" id="routeModal" role="dialog">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="panel panel-info">
				<div class="panel-heading">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="panel-title"> </h4>
				</div>
				<div class="modal-body">
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="routeInfoModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="panel-title"> </h4>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-4 text-center">
							<div class="well">
								<h4>Route Id</h4>
								<h4><span id="route_id" class="label label-primary"></span></h4>
							</div>
						</div>
						<div class="col-md-4 text-center">
							<div class="well">
								<h4>Route Number</h4>
								<h4><span id="route_number" class="label label-primary"></span></h4>
							</div>
						</div>
						<div class="col-md-4 text-center">
							<div class="well">
								<h4>Route Type</h4>
								<h4><span id="route_type" class="label label-primary"></span></h4>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-5 text-center">
							<div class="well">
								<h4>Departure At</h4>
								<h4><span id="direction_from" class="label label-primary"></span></h4>
							</div>
						</div>
						<div class="col-md-2 text-center">
								<h2><button id="swap-directions" class="btn btn-warning" style="line-height: 2; width:100%; transform: translateY(30%);"><span class="glyphicon glyphicon-resize-horizontal"></button></span></h2>
						</div>
						<div class="col-md-5 text-center">
							<div class="well">
								<h4>Arrival At</h4>
								<h4><span id="direction_towards" class="label label-primary"></span></h4>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="get-directions" class="btn btn-success btn-directions">Get Directions!</button>							
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="loading" role="dialog">
	<div class="modal-dialog">
		<div class="modal-body">
			<div id="loader"></div>
		</div>
	</div>
</div>