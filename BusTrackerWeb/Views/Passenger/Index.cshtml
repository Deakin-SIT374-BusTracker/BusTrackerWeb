<div class="page-header">
    <h1><img style="max-width:50px; margin-top: -4px; margin-right: 10px; float:left;" src="/logo.png"> Bus HoP >> Passengers</h1>
</div>

@* Route Search Form *@
<div class="row">
    <form>
        <div class="col-md-6">
            <div class="form-group" style="vertical-align:bottom">
                <label>My Rider ID:</label>
                <select id="riderSelect" class="form-control">
                    <option value="" selected disabled>My Rider Id...</option>
                    <option value="">Jill-BusDriver</option>
                    <option value="">Jack-Commuter</option>
                </select>
            </div>
            <div class="form-group" style="vertical-align:bottom">
                <label>Route:</label>
                <select id="routeSelect" class="form-control">
                    <option value="" selected disabled>Select Route...</option>
                </select>
            </div>
            <div class="form-group" style="vertical-align:bottom">
                <label>Direction:</label>
                <select id="directionSelect" class="form-control">
                    <option value="" selected disabled>Select Direction...</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="vertical-align:bottom">
                <label>GPS Mode:</label>
                <select id="routeSelect" class="form-control">
                    <option value="">Subscribe</option>
                    <option value="">Share</option>
                </select>
            </div>
            <div class="form-group" style="vertical-align:bottom">
                <label>Follow Rider:</label>
                <select id="routeSelect" class="form-control">
                    <option value="" selected disabled>Their Rider ID...</option>
                    <option value="">Jill-BusDriver</option>
                    <option value="">Jack-Commuter</option>
                </select>
            </div>
            <div class="form-group" style="vertical-align:bottom">
                <button type="button" id="searchButton" class="btn btn-primary">Search</button>
            </div>
        </div>
</form>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <table id="scheduleTable" class="table table-striped">
            <tr>
                <th>Route Departures:</th>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <div id="map_canvas" style="width:50em; height:50em"></div>
    </div>
</div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqZFelSFhnk3JDbFVx7qovf8IIG1ZViVs"></script>
<script type="text/javascript">
    function initialize() {
        var latlng = new google.maps.LatLng(40.716948, -74.003563);
        var options = {
            zoom: 14, center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"), options);
    }

    initialize();
</script>

