@section Scripts
{
    <!-- JQuery v1.12.4 -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Bootstrap v3 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Google Map API v3 -->
    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqZFelSFhnk3JDbFVx7qovf8IIG1ZViVs"></script>

    <!-- Google Map Polygon Extension v3 -->
    <script type="text/javascript" src="~/Scripts/map-epoly.js"></script>

    <!-- Map Icons -->
    <link rel="stylesheet" type="text/css" href="~/Content/map-icons.css">
    <script type="text/javascript" src="~/Scripts/map-icons.js"></script>

    <!-- Map Simulation JavaScript-->
    <script type="text/javascript" src="~/Scripts/map-simulator.js"></script>


    <!-- Web Design Stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/Content/driver.css">

    <!-- Search Type Ahead JavaScript-->
    <script type="text/javascript" src="~/Scripts/typeahead.js"></script>

    <!-- Web Design Javascript -->
    <script type="text/javascript" src="~/Scripts/driver.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            initializeMap();
            initializeRoutes();
        });
    </script>

}


<div class="page-header">
    <h1>Bus Tracker >> Driver</h1>
</div>

<div class="container-fluid content">
    <div class="row content">

        <div class="col-sm-4 sidenav">
            <div class="sidenav-content">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="routes-search">
                            <div class="input-group" id="adv-search">
                                <div class="has-feedback">
                                    <input id="searchroutes" type="text" class="form-control dropdown-toggle" placeholder="Search for routes" data-toggle="dropdown" />
                                    <span class="routes-badge form-control-feedback">0</span>
                                </div>
                                <div class="input-group-btn">
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="routes" class="panel scrollable-panel">
                        <div class="panel-body">
                            <div class="list-group routes-group-list"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-8 map">
            <div id="map_canvas"></div>
        </div>
    </div>
</div>
<hr />
<div class="modal fade" id="routeModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Routes in <span class="route-name">x</span></h4>
                <div class="list-group routes-list"></div>
            </div>

        </div>
    </div>
</div>
