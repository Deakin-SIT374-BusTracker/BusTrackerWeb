@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script>
        /*
        Function: searchButton.click()
        Use Jquery to get the search results partial view.
        */
        $('#searchButton').click(function () {
            $.get("/Journey/SearchRoutes", { destination: $("#searchInput").val() }, function (response) {
                $("#searchResults").html(response);
            });
        });
    </script>
}

<div style="margin-top:1.5em">
    <img src="~/Content/Images/bushop-logo.png" class="img-responsive" style="margin:0 auto; width:12em" />
</div>

<div>
    <div class="search-title">Where are you travelling?</div>
    <form>
        <div class="form-group">
            <input id="searchInput" type="email" class="form-control search-destination" placeholder="Find routes near me">
        </div>
        <div style="text-align: center">
            <button id="searchButton" type="button" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<div id="searchResults"></div>

<a href="@Url.Action("journeys", "Journey")">Journeys Demo</a>