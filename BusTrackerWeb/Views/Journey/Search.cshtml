@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script type="text/javascript" src="~/Scripts/journey.js"></script>
}

<div style="margin-top:1.5em">
    <img src="~/logo.png" class="img-responsive" style="margin:0 auto; width:12em" />
</div>

<div>
    <div class="search-title">Where are you travelling?</div>
    <form>
        <div class="form-group">
            <input type="email" class="form-control search-destination" id="destinationInput" placeholder="Find routes near me">
        </div>
        <div style="text-align: center">
            <button id="searchButton" type="button" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<div id="searchResults">
    <table id="routeTable" class="table table-striped search-table">
        <tr>
            <th data-field="route" >Route</th>
            <th data-field="direction" >Direction</th>
            <th data-field="link" >Link</th>
        </tr>
    </table>
</div>

<a href="@Url.Action("journeys", "Journey")">Journeys Demo</a>



